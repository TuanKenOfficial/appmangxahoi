<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_on"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorUsername"
            app:civ_border_width="10dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_off"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorCountry"
            app:civ_border_width="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageUsers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/users" />
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/imageUsers"
            android:text="Username"
            android:textColor="@color/colorUsername"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_username"
            android:text="Tin nhắn của ban ở đây"
            android:layout_toRightOf="@id/imageUsers"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:id="@+id/last_msg"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:maxLines="1"/>

    </RelativeLayout>
</RelativeLayout>