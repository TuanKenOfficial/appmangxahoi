<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupInfoActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                >

            <ImageView
                android:id="@+id/groupIconIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/createdByTv"
                android:background="#36000000"
                android:padding="5dp"
                android:text="The description of the groups"
                android:textColor="@color/colorRegister"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/createdByTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:text="created by ABC, on dd/mm/yyyy"
                    android:textColor="@color/colorRegister"
                    android:textSize="12sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/editGroupTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_create_groups"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="Edit Group"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"/>
            <TextView
                android:drawableStart="@drawable/ic_add_groups"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:id="@+id/addParticipantTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Participant"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"/>
            <TextView
                android:drawableStart="@drawable/ic_leave_groups"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:id="@+id/leaveGroupTv"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave Group"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"/>
